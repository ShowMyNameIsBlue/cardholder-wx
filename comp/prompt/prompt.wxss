/* comp/prompt/prompt.wxss */

.body {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background-color: rgba(220, 220, 220, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.main {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 500rpx;
  height: 400rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.2);
}

.item {
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 200rpx;
  font-size: 38rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.2);
}

.item-1 {
  background-color:#caff70;
}

.item-2 {
  background-color: #f0fff0; 
}
