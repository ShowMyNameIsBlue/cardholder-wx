/* pages/owner/shop/shop.wxss */
.body {
  width: 100%;
  height: 100%;
  background: whitesmoke;
  font-size: 14px;
  overflow: scroll;
}
.warn{
  margin-top: 20rpx;
  text-align: center;
}
.warn-btn{
  margin-top: 20rpx;
  background-color: white;
}

.main {
  width: 100%;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  overflow: scroll;
  box-sizing: border-box;
}

.title {
  align-self: center;
  width: 368rpx;
  text-align: center;
  background: white;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-weight: 700;
  font-size: 17px;
  margin: 20rpx 0 40rpx 0;
}

.input-item {
  margin-top: 20rpx;
  display: flex;
  width: 100%;
  justify-content: space-around;
  align-items: center;
}

.name {
  display: block;
  width: 200rpx;
  text-align: center;
  letter-spacing: 1px;
  color: black;
  /* border-radius: 20rpx; */
  height: 50rpx;
  line-height: 50rpx;
  border-right: 1px #c9c solid;
}

.inp {
  width: 300rpx;
  padding-left: 20rpx;
  background-color: white;
  border-radius: 20rpx;
  line-height: 50rpx;
  /* height: 50rpx; */
  min-height: 50rpx;
}

.but {
  margin-top: 50rpx;
  background: white;
}

.input-upload {
  align-items: flex-start;
}

.but-upload {
  text-align: center;
}

.image {
  width: 600rpx;
  height: 400rpx;
  text-align: center;
  margin: 40rpx auto 0;
}

.desc{
 align-items: flex-start;
}
.avator{
  width: 100%;
  height: 500rpx;
}

.header{
  text-align: center;
}