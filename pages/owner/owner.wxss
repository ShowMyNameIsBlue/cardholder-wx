/* pages/owner/owner.wxss */

.body {
  width: 100%;
  height: 100%;
  position: relative;
  left: 0;
  top: 0;
  background: whitesmoke;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: antiquewhite;
}

.avator {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.nickname {
  margin-top: 50rpx;
}

.main {
  height: 30%;
  width: 700rpx;
  margin-top: 25rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  background: white;
  border-radius: 30rpx
}

.item {
  width: 26%;
  height: 35%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  border-radius: 30rpx;
}

.iconfont {
  font-size: 30px;
  color: #f57c00;
}

.desc {
  font-size: 14px;
  color: #333;
}

.shopVip{
  width: 100%;
  height: 100%;
}