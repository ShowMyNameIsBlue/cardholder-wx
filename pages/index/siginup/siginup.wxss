/* pages/index/siginup/siginup.wxss */

.view {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.header {
  width: 100%;
  height: 350rpx;
  background-color: #1dc7cf;
  display: flex;
  justify-content: center;
}

.avator {
  margin-top: 100rpx;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.body {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 650rpx;
  width: 80%;
  border-radius: 10rpx;
  box-shadow: 0 10rpx 12rpx rgba(0, 0, 0, 0.2);
  margin-top: -50rpx;
  background-color: white;
}

.title {
  font-weight: bold;
  font-size: 18px;
}

.inp {
  width: 80%;
  height: 50rpx;
  border: 1px solid #1dc7cf;
  padding: 5rpx;
  box-shadow: 2rpx 2rpx 12rpx rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}

.item {
  padding-left: 10rpx;
}
.iconfont{
  position: relative;
  top: -5rpx;
}
.notice{
  margin-top: 120rpx;
}
.section{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  transform: scale(.9)
}
.warn{
  color:red;
  font-size: 14px;
  position: absolute;
  top: 80rpx;
}