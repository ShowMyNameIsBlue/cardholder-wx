/* pages/owner/order/order.wxss */

.body{
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.order-list {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-warpper{
  margin-top: 10rpx;
  text-align: center;
  font-size: 14px;
}
.title{
  display: block;
  width: 400rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 10rpx;
  background-color: whitesmoke;
  margin: 0 auto;
}
.order-list-item {
  order: #999;
  width: 700rpx;
  height: 200rpx;
  background: antiquewhite;
  border-top:20rpx solid lightsteelblue;
  border-radius: 20rpx;
  margin-top: 10rpx;
}
.notice{
  font-size: 14px;
  width: 100%;
  margin-top: 20rpx;
  text-align: center;
  color: #555
}

.content{
  width: 100;
  height: 150rpx;
  color: #555;
  text-align: left;
  padding-left:  15rpx;
  position: relative
}

.options{
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid  white;
}
.item{
  width: 50%;
  height: 50rpx;
  text-align: center
}
.accept{
  border-right: 1px solid  white;
}